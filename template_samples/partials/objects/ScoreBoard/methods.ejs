    /**
     * Loads the scores for this scoreboard.
     * @param filters An object containing filters for the scores, such as user_id, user_name, period, limit, skip, social, and tag.
     * @param callback The function to call with the loaded scores.
     * @param thisArg The context to use when calling the callback.
     */
    public function getScores(filters:Object, callback:Function, thisArg:Object)
    {
    
        if (typeof(filters) !== 'object') filters = {};
        var props = {};

        // were we given a user ID for filtering?
        if (filters.user_id !== undefined) {
            filters.user = new newgroundsIO.models.objects.User({id: filters.user_id});
        }

        // how about a username?
        if (filters.user_name !== undefined) {

            if (filters.user !== undefined) {
                // if we already created a user object, just set the name
                filters.user.name = filters.user_name;

            } else {
                // otherwise create a new user object with the name
                filters.user = new newgroundsIO.models.objects.User({name: filters.user_name});
            }
        }

        // default the lookup period to daily
        if (filters.period === undefined || filters.period === null) {
            filters.period = 'D';
        }

        props.period = filters.period;

        // set default limit to 10
        if (filters.limit === undefined || filters.limit === null) filters.limit = 10;

        // let's make sure the limit is valid, and maybe put some reasonable limits on it
        if (filters.limit < 1) {
            throw new Error('ScoreBoard filter limit must be a number greater than 0.');
            return;
        }
        
        // Don't let the user try pulling too many.  It won't work and best to warn them off early
        if (filters.limit > 100) {
            throw new Error('ScoreBoard filter limit must be a number less than or equal to 100.');
            return;
        }

        props.limit = filters.limit;

        // by default, don't skip any results
        if (!filters.skip) {
            filters.skip = 0;
        }

        props.skip = filters.skip;

        // if a user is logged in we can check for social scores
        if (METHOD_FOR_CHECKIONG_IF_USER_EXISTS() && filters.social === true) {
            props.social = true;
        }

        // if a tag is provided, add it to the props
        if (filters.tag) {
            props.tag = filters.tag;
        }

        // look for a user value, wich might be a user's id, username or a full user object
        if ( (typeof(filters.user) === 'number' && filters.user > 0) || (typeof(filters.user) === 'string' && filters.user.length > 0) || (filters.user instanceof newgroundsIO.models.objects.User) ) {
            props.user = filters.user;
        }

        // append the scoreboard id
        props.id = this.id;
        
        // create a scoreboard compenent with all the filters
        var component = new newgroundsIO.models.components.ScoreBoard.getScores(props);

        var callbackParams = {
            callback: callback,
            thisArg: thisArg
        };

        // run your code to execute the component and when completed,
        // call the onScoresLoaded method with the result and callback parameters
    }
    
