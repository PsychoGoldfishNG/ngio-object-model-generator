    /**
     * Callback for when the medal is unlocked.
     * 
     * @param result The result object from the component call.
     * @param callbackParams Additional parameters passed to the callback.
     */
    public function onUnlock(result:Object, callbackParams:Object):Void
    {
        if (result.success) {
            this.unlocked = true;
        }
        
        if (callbackParams.callback !== undefined) {
            callbackParams.callback.call(callbackParams.thisArg, result.medal, result.medal_score);
        }
    }
