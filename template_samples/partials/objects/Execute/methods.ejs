    /**
     * We want to be able to set one of our component models here so when this object
     * is converted to a JSON string, all the pertinent data is included.
     * @param newgroundsIO.models.BaseComponent component Any component model
     */
    public function setComponent(component:newgroundsIO.models.BaseComponent)
    {
        this._componentObject = component;
    }

    /**
     * Override the default toJsonObject handler and use encryption on components that require it
     * @return object A native object that can be converted to a JSON string
     */
    public function toJsonObject()
    {
        // these are the objects we want to encode with this model
        var obj:Object = {
            component: this._componentObject.getObjectName(),
            parameters: this._componentObject.toJsonObject()
        };

        // if this is a secure component, we need to convert it to an ecrypted object
        if (this._componentObject.isSecure) {
            
            return {
                secure: YOUR_ENCRYPTION_HANDLER(obj)
            };
        }

        return obj;
    }
    